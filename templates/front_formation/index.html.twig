{% extends 'base.html.twig' %}

{% block title %}Nos Formations{% endblock %}

{% block body %}

{% for formation in formations %}
<main class="container">
    <div class="row text-bg-white">
        <img class="img-fluid pe-0 me-0" src="{{ asset ('images/formation/') ~ formation.imageName }}">
        <div class="card-img-overlay text-center text-white text1">
            <div class="d-none d-sm-block d-sm-none d-md-block">
                {{ formation.texte1|raw }}
            </div>    
            <div class="ms-3 d-md-none d-lg-block d-lg-none d-xl-block d-xl-none d-xxl-none d-xxl-block ">Une équipe de formateurs adaptée à vos besoins dans le domaine de la formation, de l’information et de la bureautique</div>
        </div>
    </div>

    <div class="row text-center py-5">
        <div class="col">
            <img class="img-fluid pe-5" src="{{ asset ('images/formation/') ~ formation.imageName2}}">
            <img class="img-fluid pe-5" src="{{ asset ('images/formation/') ~ formation.imageName3}}">
            <img class="img-fluid pe-5" src="{{ asset ('images/formation/') ~ formation.imageName4}}">
            <img class="img-fluid pe-5" src="{{ asset ('images/formation/') ~ formation.imageName5}}">
            <img class="img-fluid pe-2" src="{{ asset ('images/formation/') ~ formation.imageName6}}">
            <img class="img-fluid pe-2" src="{{ asset ('images/formation/') ~ formation.imageName7}}">
        </div>
    </div>
    <div class="row text-center">
        <div class="col"></div>
        <div class="col-6 py-5">
            {{ formation.titre|raw }}
        </div>
        <div class="col"></div>
    </div>
        
    <div class="col">
        <img class="img-fluid pe-5" src="{{ asset ('images/formation/') ~ formation.imageName8}}">
    </div>

    <h4 class="text-center pt-5">{{ formation.titre2|raw }}</h4>

    <div class="row my-5">
        {% for cours in formation.cours %}
        <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 d-flex flex-wrap mb-3 border rounded border-3 border-danger me-5" style="width: 12rem;">
            <div class="card">
                <img style="width: 3rem;" class="ms-5 mb-2 pt-2" src="{{ asset ('images/formation/') ~ cours.imageName}}">
                <div class="card-body d-flex flex-wrap justify-content-center">
                    <h6 class="text-center card-title" >{{cours.nom|raw}}</h6>
                    <div>{{cours.theme|raw}}</div>
                </div>
            </div> 
        </div>
        {% endfor %}
    </div>

    {% endfor %}
</main>


{% endblock %}
