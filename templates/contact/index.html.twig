{% extends 'base.html.twig' %}

{% block title %}Contactez-nous{% endblock %}

{% block body %}

    <div class="row encart my-4">
        <div class="col-6 text-white m-5">Pourquoi nous contacter ? <br>Si vous avez des questions auxquelles nous n’avons pas répondu ou surtout si vous souhaitez collaborer avec nous, n’hésitez pas à remplir le formulaire de contact pour avoir plus d’informations.</div>
        <img class="img-send mb-4 " src="images/contact/send.png">
    </div>

    <main class="container max-width-200 my-5 text-bg-light p-5">    
        {{ form_start (formulaire) }}
            <div class="row justify-content-around my-2">       
                <div class="col-4 ">
                    <label for="nom" class="my-2">Nom :</label>
                    {{ form (formulaire.nom) }}
                </div>
                <div class="col-4">
                    <label for="email" class="my-2">Email :</label>
                    {{ form (formulaire.email) }}
                </div>   
            </div>

            <div class="row justify-content-center my-2">
                <div class="col-10">
                    <label for="sujet" class="my-2">Sujet :</label>
                    {{ form (formulaire.sujet) }}
                </div>  
            </div>  
            <div class="row justify-content-center my-2">
                <div class="col-10">
                    <label for="message" class="my-2">Message :</label>
                    {{ form (formulaire.message) }}
                </div>  
            </div>
            <div class="row justify-content-center my-2">
                <div class="col-12 d-flex justify-content-evenly align-items-center">
                    <label for="message" class="mt-3">Veuillez saisir les caractères :</label>
                    {{ form (formulaire.captcha, {'attr':{'class':'w-50 ms-5 mt-3 d-flex'}} ) }}
                </div>
            </div>   
            <div class="row justify-content-center my-5">
                <div class="col-2 ">
                    <button type="submit" class="btn btn-danger">Envoyer</button>
                </div>
            </div>
            
            
            
        {{ form_end (formulaire) }}
    </main>

{% endblock %}
