{% extends 'base-backend.html.twig' %}

{% block title %}Equipe{% endblock %}

{% block body %}

<a href="{{ path('app_admin_equipe_new') }}" class="btn btn-dark">Nouveau</a>
    <h1 class="text-center">Equipe</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Photo</th>
                <th>Nom</th>
                <th>Poste</th>
