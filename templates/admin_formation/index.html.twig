{% extends 'base-backend.html.twig' %}

{% block title %}Formation{% endblock %}

{% block body %}
    <h1 class="text-center">Page Formation</h1>



<table class="table">
    <tbody>
    
    {% for formation in formations %}
    <td>
        <a href="{{ path('app_admin_formation_edit', {'id': formation.id}) }}"title="Modifier" class="btn btn-success my-2">
            Modifier
        </a>
    </td>

