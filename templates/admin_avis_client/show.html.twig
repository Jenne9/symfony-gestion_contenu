{% extends 'base-backend.html.twig' %}

{% block title %}Avis Client{% endblock %}

{% block body %}
<a href="{{ path('app_admin_avis_client_index') }}"class="btn btn-dark my-3">Retour Ã  la liste</a>
    <h1 class="text-center my-2">Avis Client</h1>

    <div class="d-flex justify-content-end align-items-end">
        {{ include('admin_avis_client/_delete_form.html.twig') }}
        <a href="{{ path('app_admin_avis_client_edit', {'id': avis_client.id}) }}" title="Modifier" class="btn btn-success ms-2">
            <i class="align-middle" data-feather="edit"></i>
        </a>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ avis_client.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{% if avis_client.imageName is defined and avis_client.imageName is not null %}
                    <img src="{{ asset('images/avisClient/' ~ avis_client.imageName) }}" style="width:15rem;" alt="" class="img-fluid">
                    {% else %}
                        N/A
                    {% endif %}</td>
            </tr>
            {# <tr>
                <th>UpdatedAt</th>
                <td>{{ avis_client.updatedAt ? avis_client.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr> #}
            <tr>
                <th>Nom</th>
                <td>{{ avis_client.nom }}</td>
            </tr>
            <tr>
                <th>Poste</th>
                <td>{{ avis_client.poste }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ avis_client.commentaire }}</td>
            </tr>
        </tbody>
    </table>


{% endblock %}
