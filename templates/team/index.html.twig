{% extends 'base.html.twig' %}

{% block title %}Hello TeamController!
{% endblock %}

{% block body %}

	{{ laTeam.titre }}
	<img style="width:rem;" class="pt-2 " src="{{ asset ('images/team/') ~ laTeam.imageName}}">
	<div class= "row my-5 justify-content-center mx-auto">

	{% for equipe in laTeam.equipe %}


		<div class="card col-12 col-md-3 col-lg-4 col-xl-3 d-flex flex-wrap align-items-center" style="width: 25rem;">
			<img style="width: 10rem;" src="{{ asset("images/equipe/") ~ equipe.imageName }}" class="card-img-top" alt="...">

			<div class="card-body text-center">

				<h5 class="card-title text-center">{{ equipe.nom}}</h5>
				<p class="card-text">{{ equipe.poste}}</p>
				<p class="card-text">{{ equipe.titre}}</p>
			</div>
		</div>
		<img style="width:rem;" class="pt-2 " src="{{ asset ('images/team/') ~ laTeam.imageName}}">

	{% endfor %}
	</div>

{% endblock %}
