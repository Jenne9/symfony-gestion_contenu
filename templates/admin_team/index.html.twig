{% extends 'base-backend.html.twig' %}

{% block title %}Page Qui sommes nous ?{% endblock %}

{% block body %}

    <h1 class="text-center">Page Qui sommes nous ?</h1>
    <a href="{{ path('app_admin_team_new') }}"class="btn btn-dark my-3">Nouveau</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Image</th>
                <th>Presentation</th>
                <th>Image2</th>
                <th>Image3</th>
                {# <th>UpdatedAt</th> #}
                <th>Titre3</th>
                <th>Presentation2</th>
                <th>Image4</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for team in teams %}
            <tr>
                <td>{{ team.id }}</td>
                <td>{{ team.titre }}</td>
                <td>{% if team.imageName is defined and team.imageName is not null %}
                    <img class="img-list" src="{{ asset('images/team/' ~ team.imageName) }}"> 
                {% else %}
                    N/A                    
                {% endif %}</td>
                <td>{{ team.presentation }}</td>
                <td>
                    {% if team.imageName2 is defined and team.imageName2 is not null %}
                    <img class="img-list" src="{{ asset('images/team/' ~ team.imageName2) }}"> 
                {% else %}
                    N/A                    
                {% endif %}</td>
                <td>
                    {% if team.imageName3 is defined and team.imageName3 is not null %}
                    <img class="img-list" src="{{ asset('images/formation/' ~ team.imageName3) }}"> 
                {% else %}
                    N/A                    
                {% endif %}</td>

                {# <td>{{ team.UpdatedAt ? team.UpdatedAt|date('Y-m-d H:i:s') : '' }}</td> #}
                <td>{{ team.titre3 }}</td>
                <td>{{ team.presentation2 }}</td>
                <td>{{ team.imageName4 }}</td>
                <td>
                    <a href="{{ path('app_admin_team_show', {'id': team.id}) }}" class="btn btn-dark"><i class="align-middle" data-feather="eye"></i></a>
                    <a href="{{ path('app_admin_team_edit', {'id': team.id}) }}"class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="15">Aucune page Qui sommes nous trouv√©e</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
