{% extends 'base-backend.html.twig' %}

{% block title %}Carousel{% endblock %}

{% block body %}
<a href="{{ path('app_admin_carousel_index') }}" class="btn btn-dark my-3">Retour à la liste</a>
    <h1>Carousel</h1>

    <div class="d-flex justify-content-end align-items-end">
        {{ include('admin_carousel/_delete_form.html.twig') }}
        <a href="{{ path('app_admin_carousel_edit', {'id': carousel.id}) }}"title="Modifier" class="btn btn-success ms-2">
            <i class="align-middle" data-feather="edit"></i>
        </a>
    </div>


    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ carousel.id }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{% if carousel.imageName is defined and carousel.imageName is not null %}
                    <img
                    src="{{ asset('images/carousels/' ~ carousel.imageName) }}" alt="" class="img-fluid">
                    {% else %}
                        N/A
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Mise à jour</th>
                <td>{{ carousel.updatedAt ? carousel.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ carousel.texte }}</td>
            </tr>
        </tbody>
    </table>

    
{% endblock %}
