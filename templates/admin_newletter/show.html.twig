{% extends 'base-backend.html.twig' %}

{% block title %}Newletter{% endblock %}

{% block body %}
    <a href="{{ path('app_admin_newletter_index') }}"class="btn btn-dark my-3">Retour Ã  la liste</a>
    <h1 class="text-center">Newletter</h1>

    <div class="d-flex justify-content-end align-items-end">
        {{ include('admin_newletter/_delete_form.html.twig') }}
        <a href="{{ path('app_admin_newletter_edit', {'id': newletter.id}) }}"title="Modifier" class="btn btn-success ms-2">
        <i class="align-middle" data-feather="edit"></i></a>
    </div>


    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ newletter.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{% if newletter.imageName is defined and newletter.imageName is not null %}
                    <img class="img-list"style="width:20rem;" src="{{ asset('images/newletter/' ~ newletter.imageName) }}"> 
                {% else %}
                    N/A                    
                {% endif %}</td>
            </tr>
            {# <tr>
                <th>UpdatedAt</th>
                <td>{{ newletter.updatedAt ? newletter.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr> #}
            <tr>
                <th>Titre</th>
                <td>{{ newletter.titre }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ newletter.text }}</td>
            </tr>
        </tbody>
    </table>


{% endblock %}
