{% extends 'base-backend.html.twig' %}

{% block title %}Newletter index{% endblock %}

{% block body %}
    <h1>Newletter index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ImageName</th>
                <th>UpdatedAt</th>
                <th>Titre</th>
                <th>Text</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for newletter in newletters %}
            <tr>
                <td>{{ newletter.id }}</td>
                <td>{{ newletter.imageName }}</td>
                <td>{{ newletter.updatedAt ? newletter.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ newletter.titre }}</td>
                <td>{{ newletter.text }}</td>
                <td>
                    <a href="{{ path('app_admin_newletter_show', {'id': newletter.id}) }}">show</a>
                    <a href="{{ path('app_admin_newletter_edit', {'id': newletter.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_newletter_new') }}">Create new</a>
{% endblock %}
