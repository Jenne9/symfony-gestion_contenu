{% extends 'base.html.twig' %}

{% block title %}Cours{% endblock %}

{% block body %}
    <h1>Cours</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cour.id }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ cour.ImageName }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ cour.updatedAt ? cour.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ cour.nom }}</td>
            </tr>
            <tr>
                <th>Theme</th>
                <td>{{ cour.theme }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_cours_index') }}">back to list</a>

    <a href="{{ path('app_admin_cours_edit', {'id': cour.id}) }}">edit</a>

    {{ include('admin_cours/_delete_form.html.twig') }}
{% endblock %}
