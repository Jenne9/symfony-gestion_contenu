{% extends 'base-backend.html.twig' %}

{% block title %}Accueil {% endblock %}

{% block body %}
    <h1 class="text-center">Page Accueil</h1>

<a href="{{ path('app_admin_accueil_new') }}" class="btn btn-dark my-3">Nouveau</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Photo</th>
                {# <th>UpdatedAt</th> #}
                <th>Description</th>
                <th>Titre</th>
                <th>Nom</th>
                <th>Commentaire</th>
                <th>Texte</th>
                <th class="text-center">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for accueil in accueils %}
            <tr>
                <td>{{ accueil.id }}</td>
                <td>{% if accueil.imageName is defined and accueil.imageName is not null %}
                    <img src="{{ asset('images/accueil/' ~ accueil.imageName) }}" style="width:20rem;" alt="" class="img-fluid">
                    {% else %}
                        N/A
                    {% endif %}
                </td>
                {# <td>{{ accueil.UpdatedAt ? accueil.UpdatedAt|date('Y-m-d H:i:s') : '' }}</td> #}

                <td>{{ accueil.description|raw  }}</td>
                <td>{{ accueil.titre|raw  }}</td>
                <td>{{ accueil.nom|raw  }}</td>
                <td>{{ accueil.commentaire|raw  }}</td>
                <td>{{ accueil.texte|raw }}</td>
                <td class="text-center">
                    <a href="{{ path('app_admin_accueil_show', {'id': accueil.id}) }}"title="Voir" class="btn btn-dark mb-2">
                        <i class="align-middle" data-feather="eye"></i>
                    </a>
                    <a href="{{ path('app_admin_accueil_edit', {'id': accueil.id}) }}"title="Modifier" class="btn btn-success">
                <i class="align-middle" data-feather="edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucune page trouv√©e</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
