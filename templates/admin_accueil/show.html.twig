{% extends 'base-backend.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <a href="{{ path('app_admin_accueil_index') }}" class="btn btn-dark my-3">Retour Ã  la liste</a>

    <h1 class="text-center">Accueil</h1>
        
        <div class="d-flex justify-content-end align-items-end">
            {{ include('admin_accueil/_delete_form.html.twig') }}
            <a href="{{ path('app_admin_accueil_edit', {'id': accueil.id}) }}"title="Modifier" class="btn btn-success ms-2">
                <i class="align-middle" data-feather="edit"></i>
            </a>
        </div>



    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ accueil.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{% if accueil.imageName is defined and accueil.imageName is not null %}
                    <img src="{{ asset('images/accueil/' ~ accueil.imageName) }}" style="width:20rem;" alt="" class="img-fluid">
                    {% else %}
                        N/A
                    {% endif %}</td>
            </tr>
            {# <tr>
                <th>UpdatedAt</th>
                <td>{{ accueil.UpdatedAt ? accueil.UpdatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr> #}
            <tr>
                <th>Description</th>
                <td>{{ accueil.description }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ accueil.titre }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ accueil.nom }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ accueil.commentaire }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ accueil.texte|raw }}</td>
            </tr>
        </tbody>
    </table>


{% endblock %}
