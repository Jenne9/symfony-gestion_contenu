{% block body %}
<body class="body">
    <a class="nav-link "href="{{ path('app_front_formation') }}"><img class="img-fluid"src="images/formation/down.png"></a>
    <div class="card-mobile mb-3 border rounded border-3 border-danger me-5" style="width: 12rem;">
        <div class="card align-items-center">
            <img style="width: 3rem;" class="pt-2 " src="{{ asset ('images/formation/') ~ cours.imageName}}">
            <div class="card-body flex-wrap justify-content-center">
                <h6 class="text-center" style="height: 39px;" >{{cours.nom|raw}}</h6>
                <div class="mb-5">{{cours.theme|raw}}</div>
            </div>
        </div> 
    </div>
</body>
	{% endblock %}